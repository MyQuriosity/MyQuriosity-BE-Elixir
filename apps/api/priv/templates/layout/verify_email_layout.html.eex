<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet" />
    <title>Email Confirmation</title>
    <style type="text/css">
        .quriosity-style {
            color: #1d273e;
        }

        .title {
            padding: 30px 20px 30px 20px;
            border-bottom: 3px solid #f4f5fa;
            width: 80%;
            text-align: center;
            font-weight: bold;
            font-size: 24px;
            line-height: 29px;
            font-family: "Roboto", sans-serif;
        }

        .emailbox-content {
            padding: 15px 50px;
            color: #777d8b;
            width: 100%;
            text-align: left;
            font-size: 14px;
            font-weight: 500;
            line-height: 20px;
            text-align: center;
            font-family: "Roboto", sans-serif;
        }

        .logo-part {
            padding: 20px 0px;
            font-size: 24px;
            line-height: 29px;
            font-weight: bold;
            font-family: "Roboto", sans-serif;
            width: 100%;
        }

        .btn-css {
            color: #006600 !important;
            font-size: 16px;
            line-height: 27px;
            background-color: #dcfae4;
            font-weight: 500;
            border-radius: 7px;
            border: 2px solid #7cba80;
            width: 180px;
            padding: 9px 20px;
            font-family: "Roboto", sans-serif;
            text-decoration: none;
        }

        .help-box {
            background-color: #ffffff;
            border-radius: 12px;
            width: 95%;
            max-width: 600px;
            padding: 30px 0px;
            font-weight: bold;
            margin-top: 10px;
            font-family: "Roboto", sans-serif;
        }

        .email-box {
            background-color: #ffffff;
            border-radius: 12px;
            width: 95%;
            max-width: 600px;
            padding: 30px 0px;
            font-size: 24px;
            line-height: 29px;
            font-family: "Roboto", sans-serif;
        }

        .help-box__help {
            color: #1d273e;
            text-align: center;
            font-size: 20px;
            line-height: 17px;
            letter-spacing: 0.4px;
            font-family: "Roboto", sans-serif;
        }

        .help-box__link {
            color: #006600;
            font-size: 14px;
            line-height: 24px;
            letter-spacing: 0.28px;
            padding-top: 5px;
            font-family: "Roboto", sans-serif;
        }

        .links {
            padding-top: 20px;
        }

        .address {
            font-size: 14px;
            color: #777d8b;
            line-height: 24px;
            text-align: center;
            font-weight: normal;
            padding-bottom: 20px;
            font-family: "Roboto", sans-serif;
        }

        @media (max-width: 375px) {
            .title {
                font-size: 21px;
                padding: 0px 20px 12px 20px;
            }
        }

        @media (max-width: 425px) {
            .btn-css {
                width: 115px !important;
                font-size: 12px !important;
            }
        }

        @media (max-width: 436px) {
            .emailbox-content {
                padding: 15px 20px;
            }

            .title {
                padding: 14px 20px 20px 20px;
            }

            .help-box {
                margin-top: 6px;
            }
        }

        @media (max-width: 768px) {
            .btn-css {
                width: 125px;
                font-size: 13px;
                line-height: 18px;
            }

            .helpbox,
            .email-box {
                border-radius: 8px;
            }
        }
    </style>
</head>

<body>
    <%= @inner_content %>
</body>

</html>
